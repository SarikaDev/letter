generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // or mysql, sqlite, etc.
  url      = env("DATABASE_URL")
}

model Message {
  id        Int      @id @default(autoincrement())
  content   String
  sender    String // e.g., "user" or "bot"
  receiver  String
  createdAt DateTime @default(now())

  @@map("message")
}
